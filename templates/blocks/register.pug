extends ../layout

block header
    script(src='/scripts/register.js')
    link(rel='stylesheet', href='/css/register.css')

block content
    section.section-container.w-50.mx-auto
        if message
            .error #{message}
        h2 REGISTER
        form#register-form.w-100(action='/registration', method='post')
            div
                label(for='username') Username:
                input.w-100(type='text', name='username' required placeholder='4 - 50 characters. Can contain alphanumberics and underscores.', minlength='4', maxlength='50', pattern='^[a-zA-Z0-9_]{4,50}', title='4 - 50 characters of alphanumerics and/or underscores', autocomplete="off")
            div
                label(for='password') Password:
                input.w-100(type='password', name='password' required placeholder='6 - 45 characters.', minlength='6', maxlength='45')
            div
                label(for='confirm-password') Confirm Password:
                input.w-100(type='password', name='confirm_password' required, minlength='6', maxlength='45')
            div
                label(for='email') Email:
                input.w-100(type='email', name='email' required placeholder='example@exmaple.com', maxlength='100', autocomplete="nope")
            div
                label(for='confirm-email') Confirm Email:
                input.w-100(type='email', name='confirm_email' required, maxlength='100', autocomplete="nope")
            label(for='agreement')
                input(type='checkbox', name='agreement' required)
                | I have read and agreed to the terms of services
            .form-buttons
                input(type='submit', value='Submit')
                input(type='reset', value='Clear')